}

.num {
  padding: 10px 0;
}

.num text {
  line-height: 36px;
}

.num-content view {
  width: 36px;
  height: 36px;
  line-height: 36px;
  text-align: center;
}

.buy-num { 
  border-top: 1px solid #AAA;
  border-bottom: 1px solid #AAA;
}

.plus, .minus {
  font-size: 20px;
  font-weight: bold;
  border: 1px solid #AAA;
  color: rgb(255, 166, 0);
}

.buy-btn {
  position: fixed;
  bottom: 10px;
  width: 90%;
  margin: 0 5%;
}

.buy-btn button {
  color: #FFF;
  background: rgb(255, 166, 0);
}

.buy-btn text {
  font-size: 12px;
  line-height: 15px;
  color: #777;
}

.buy-btn navigator {
  font-size: 12px;
  line-height: 15px;
  color: rgb(0, 140, 255);
}

.vip-ops {
  margin-top: 10px;
  background:#FFF;
}

.vip-ops > view {
  border-bottom: 1px solid #EEE;
  padding: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.vip-ops > view > text {
  line-height: 20px;
  font-size: 15px;
}

.pay-type-info {
  justify-content: center;
  margin: 5px 0;
}

.warning {
  background: #FFF; 
  align-items: center;
}

.warning > text {
  margin-left: 5px; 
  line-height: 25px;
  font-size: 14px;
  color: #555;
}