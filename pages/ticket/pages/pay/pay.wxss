}

.line {
  border-bottom:1px solid #CCC;
}

.wrap {
  padding: 0px;
}

.top-wrap {
  padding: 8px;
  padding-bottom: 0px;
  background: #FFF;
}

.center-wrap {
  padding: 8px;
  background: #FFF;
}

.flex-wrp-row {
  display: flex;
  flex-direction: row;
}

.tips {
  margin: 5px 0 15px 0;
  height:12px;
}
 
.flex-left {
   flex: 1; /* 重要 */
   align-items:center;
}
 
.know {
  font-size:12px;
  color:rgb(7, 185, 255);
  margin: 0 5px;
}

.type-item {
  margin-right: 5px;
}

.type-item > image {
  width: 10px; 
  height: 10px;
  margin: 0 3px;
}

.type-item > text {
  line-height: 12px;
  font-size: 12px;
}

.title {
  font-size: 20px;
}

.small-title {
  font-size: 15px;
}

.title-tips {
  margin-left: 5px; color: red; 
  font-size: 13px;
}

.date {
  padding-bottom: 10px;
  border-bottom: 1px solid #CCC;
}

.date-content {
  margin-top: 10px;
}

.date-box {
  border: 1px solid #CCC; 
  border-radius: 3px;
  text-align: center;
  margin: 1px 1%;
  height: 40px;
  padding: 5px;
}

.selected {
  border: 2px solid rgb(255, 166, 0);
  margin: 0 1%;
}

.date-item {
  width: 25%;
}

.date-box view {
  font-size: 15px;
  line-height: 20px;
}

