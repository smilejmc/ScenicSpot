/* pages/ticket/pages/ticket/ticket.wxss */

@import "../mylist/mylist.wxss";

page {
  background: rgb(255, 166, 0);
}

.wrap {
  margin: 0 5%;
  width: 90%;
  height: 450px;
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  background: #FFF;
  border-radius: 8px;
}

.top-wrap {
  height: 120px;
  border-bottom:1px solid #CCC; 
  padding: 5px;
  text-align: center;
  position: relative;
}

.center-wrap { 
  height: 250px;
  text-align: center;
  padding: 50px 0;
}

.dot {
  height:10px; 
  width:10px; 
  border-radius: 5px;
  background: rgb(255, 166, 0);
  position: absolute;
  bottom: -5px;
}

.left {
  left: -5px;
}

.right {
  right: -5px;
}